{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">Proposed Contacts</h1>

    {% if contacts|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.fullName }}</td>
                        <td>{{ contact.email }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('proposal_approve', {id: contact.id}) }}" class="btn btn-success">
                                    Approve
                                </a>
                                <a href="{{ path('proposal_reject', {id: contact.id}) }}" class="btn btn-danger">
                                    Reject
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No new contact proposals. \o/</p>
    {% endif %}

    <a href="{{ path('proposal_propose') }}" class="btn btn-default">Propose Contact</a>
{% endblock %}
